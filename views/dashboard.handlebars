<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
      {{> dashboardPostInfo post}}
    {{/each}}
  {{/if}}
</div>

<button type="submit" class="btn"><a href="/dashboard/new">New Post</a></button>

<script src="/js/addPost.js"></script>